{
  "manifest_version": 3,
  "name": "Freshdesk AI Summarizer",
  "version": "2.0.0",
  "description": "AI-powered ticket summarizer for Freshdesk using Google Gemini",

  "permissions": [
    "activeTab",
    "scripting"
  ],

  "host_permissions": [
    "https://*.freshdesk.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "icons": {
    "128": "assets/icon.png"
  },

  "action": {
    "default_icon": "assets/icon.png",
    "default_title": "Analyze Freshdesk Ticket"
  }
}
